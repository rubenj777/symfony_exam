{% extends 'base.html.twig' %}

{% block title %}Editer l'impression{% endblock %}

{% block body %}
        <div class="row">
            <div class="col-2 mt-5 mb-5">
                <div>
                    <a href="{{ path('index') }}" class="btn btn-primary">Retour</a>
                </div>
            </div>

            <div class="col-10 mt-5">

                {{ form_start(form, {'action':path('edit_impression', {id:impression.id}) }) }}

                {{ form_widget(form.content) }}

                <div class="mt-1">
                    <button type="submit" class="btn btn-secondary">Enregistrer</button>
                </div>

                {{ form_end(form) }}
            </div>

        </div>
{% endblock %}